---
import UserUpdateModal from "@/components/UserUpdateModal"
import type { User } from "@/types/catalog"
const userInfoCookie = Astro.cookies.get("userInfo")?.value

let userInfo: User | null = null

if (userInfoCookie) {
  try {
    userInfo = JSON.parse(decodeURIComponent(userInfoCookie))
  } catch (err) {
    console.error("Error al parsear userInfo:", err)
  }
}
---

<div
  class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200"
>
  <div
    class="px-6 py-4 flex justify-between bg-gradient-to-r from-blue-600 to-blue-700"
  >
    <div>
      <h2 class="text-xl font-bold text-white">Ajustes de Usuario</h2>
      <p class="text-blue-100 text-sm mt-1">Gestiona tu información personal</p>
    </div>
    <div class="rounded-2xl overflow-hidden h-fit">
      <UserUpdateModal client:load userId={userInfo?.id} />
    </div>
  </div>

  <div class="p-6">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <h3
              class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2"
            >
              Información Personal
            </h3>

            <div>
              <label class="block text-sm font-medium text-gray-600 mb-1"
                >Nombre Completo
              </label>
              <div class="bg-gray-50 px-3 py-2 rounded-md border">
                {userInfo?.name}
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-600 mb-1"
                >Correo Electrónico</label
              >
              <div class="bg-gray-50 px-3 py-2 rounded-md border">
                {userInfo?.email}
              </div>
            </div>
          </div>
          <div class="space-y-4">
            <h3
              class="text-lg font-semibold text-gray-900 border-b border-gray-200 pb-2"
            >
              Información del Sistema
            </h3>

            <div>
              <label class="block text-sm font-medium text-gray-600 mb-1"
                >ID de Usuario</label
              >
              <div class="bg-gray-50 px-3 py-2 rounded-md border">
                {userInfo?.id}
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-600 mb-1"
                >Rol</label
              >
              <div class="bg-gray-50 px-3 py-2 rounded-md border">
                <span
                  class={`inline-flex items-center px-2 py-1 rounded-md text-xs font-medium ${
                    userInfo?.role === "ADMINISTRATOR"
                      ? "bg-purple-100 text-purple-800"
                      : "bg-blue-100 text-blue-800"
                  }`}
                >
                  {
                    userInfo?.role === "ADMINISTRATOR"
                      ? "Administrador"
                      : "Mesero"
                  }
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg
                class="h-5 w-5 text-blue-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h4 class="text-sm font-medium text-blue-800">
                Información de Seguridad
              </h4>
              <p class="text-sm text-blue-700 mt-1">
                Para cambiar tu contraseña o información sensible, utiliza el
                botón "Editar Perfil". Los cambios requieren confirmación por
                seguridad.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
