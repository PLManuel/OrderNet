---
import LayoutDashboard from "@/layouts/LayoutDashboard.astro"
---

<LayoutDashboard>
  <div class="pattern-dots min-h-screen pb-12">
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-10">
      <div class="relative mb-16">
        <div class="absolute inset-0 flex items-center justify-center">
          <div
            class="bg-gradient-to-r from-indigo-500/10 to-purple-500/10 blur-3xl h-32 w-full rounded-full"
          >
          </div>
        </div>
        <div class="relative text-center">
          <div
            class="inline-flex items-center justify-center p-2 bg-white rounded-full shadow-lg mb-6 animate-float"
          >
            <div
              class="bg-gradient-to-r from-indigo-600 to-indigo-800 p-3 rounded-full"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8 text-white"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
                ></path>
              </svg>
            </div>
          </div>
          <h1 class="text-5xl font-bold text-[#4f46e5] mb-4">OrderNet</h1>
          <h2 class="text-2xl font-semibold text-[#1f2937] mb-2">
            Panel de Administración
          </h2>
          <p class="text-[#6b7280] text-lg max-w-lg mx-auto">
            Gestiona tu restaurante desde un solo lugar
          </p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
        <div
          class="stat-card bg-white rounded-xl border border-[#e5e7eb] shadow-sm p-6 flex items-center"
        >
          <div class="bg-indigo-100 p-3 rounded-lg mr-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-indigo-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              ></path>
            </svg>
          </div>
          <div>
            <p class="text-[#6b7280] text-sm">Pedidos hoy</p>
            <div class="flex items-end">
              <p class="text-2xl font-bold text-[#1f2937]">24</p>
            </div>
          </div>
        </div>

        <div
          class="stat-card bg-white rounded-xl border border-[#e5e7eb] shadow-sm p-6 flex items-center"
        >
          <div class="bg-green-100 p-3 rounded-lg mr-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-green-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
              ></path>
            </svg>
          </div>
          <div>
            <p class="text-[#6b7280] text-sm">Ventas hoy</p>
            <div class="flex items-end">
              <p class="text-2xl font-bold text-[#1f2937]">S/.1,110</p>
            </div>
          </div>
        </div>

        <div
          class="stat-card bg-white rounded-xl border border-[#e5e7eb] shadow-sm p-6 flex items-center"
        >
          <div class="bg-amber-100 p-3 rounded-lg mr-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-amber-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"
              ></path>
            </svg>
          </div>
          <div>
            <p class="text-[#6b7280] text-sm">Mesas ocupadas</p>
            <div class="flex items-end">
              <p class="text-2xl font-bold text-[#1f2937]">8/12</p>
            </div>
          </div>
        </div>

        <div
          class="stat-card bg-white rounded-xl border border-[#e5e7eb] shadow-sm p-6 flex items-center"
        >
          <div class="bg-red-100 p-3 rounded-lg mr-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-red-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"
              ></path>
            </svg>
          </div>
          <div>
            <p class="text-[#6b7280] text-sm">Platillos vendidos</p>
            <div class="flex items-end">
              <p class="text-2xl font-bold text-[#1f2937]">86</p>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <a href="/usuarios" class="group block">
          <div
            class="menu-card bg-white rounded-xl border border-[#e5e7eb] hover:border-[#4f46e5] p-8"
          >
            <div class="flex items-start justify-between mb-6">
              <div class="icon-container bg-indigo-100 p-4 rounded-xl">
                <svg
                  class="h-8 w-8 text-[#4f46e5]"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                  ></path><path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"
                  ></path><path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"
                  ></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path><path
                    d="M21 21v-2a4 4 0 0 0 -3 -3.85"></path></svg
                >
              </div>
              <div class="relative">
                <div
                  class="text-[#4f46e5] opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
                <div
                  class="notification-badge bg-red-500 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center"
                >
                  2
                </div>
              </div>
            </div>
            <h3
              class="text-2xl font-bold text-[#1f2937] group-hover:text-[#4f46e5] transition-colors mb-3"
            >
              Usuarios
            </h3>
            <p class="text-[#6b7280] text-lg mb-4">
              Gestionar usuarios del sistema
            </p>
            <div class="flex items-center text-sm text-[#6b7280]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 mr-2 text-indigo-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                ></path>
              </svg>
              Administrar roles y permisos
            </div>
            <div class="mt-6 flex flex-wrap gap-2">
              <span
                class="bg-indigo-100 text-indigo-800 text-xs px-2 py-1 rounded-full"
                >Admins</span
              >
              <span
                class="bg-indigo-100 text-indigo-800 text-xs px-2 py-1 rounded-full"
                >Mozos</span
              >
              <span
                class="bg-indigo-100 text-indigo-800 text-xs px-2 py-1 rounded-full"
                >Cocina</span
              >
            </div>
          </div>
        </a>

        <a href="/pedidos" class="group block">
          <div
            class="menu-card bg-white rounded-xl border border-[#e5e7eb] hover:border-[#059669] p-8"
          >
            <div class="flex items-start justify-between mb-6">
              <div class="icon-container bg-green-100 p-4 rounded-xl">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#059669]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                  ></path>
                </svg>
              </div>
              <div class="relative">
                <div
                  class="text-[#059669] opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
                <div
                  class="notification-badge bg-red-500 text-white text-xs font-bold rounded-full h-5 w-5 flex items-center justify-center"
                >
                  5
                </div>
              </div>
            </div>
            <h3
              class="text-2xl font-bold text-[#1f2937] group-hover:text-[#059669] transition-colors mb-3"
            >
              Pedidos
            </h3>
            <p class="text-[#6b7280] text-lg mb-4">
              Ver y gestionar todos los pedidos
            </p>
            <div class="flex items-center text-sm text-[#6b7280]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 mr-2 text-green-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Estados, seguimiento e historial
            </div>
            <div class="mt-6 flex flex-wrap gap-2">
              <span
                class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full"
                >Activos</span
              >
              <span
                class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full"
                >Completados</span
              >
              <span
                class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full"
                >Cancelados</span
              >
            </div>
          </div>
        </a>

        <a href="/catalogo" class="group block">
          <div
            class="menu-card bg-white rounded-xl border border-[#e5e7eb] hover:border-[#d97706] p-8"
          >
            <div class="flex items-start justify-between mb-6">
              <div class="icon-container bg-amber-100 p-4 rounded-xl">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#d97706]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"
                  ></path>
                </svg>
              </div>
              <div
                class="text-[#d97706] opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
            <h3
              class="text-2xl font-bold text-[#1f2937] group-hover:text-[#d97706] transition-colors mb-3"
            >
              Catálogo
            </h3>
            <p class="text-[#6b7280] text-lg mb-4">
              Productos y categorías del menú
            </p>
            <div class="flex items-center text-sm text-[#6b7280]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 mr-2 text-amber-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                ></path>
              </svg>
              Platillos, bebidas y postres
            </div>
            <div class="mt-6 flex flex-wrap gap-2">
              <span
                class="bg-amber-100 text-amber-800 text-xs px-2 py-1 rounded-full"
                >Platillos</span
              >
              <span
                class="bg-amber-100 text-amber-800 text-xs px-2 py-1 rounded-full"
                >Bebidas</span
              >
              <span
                class="bg-amber-100 text-amber-800 text-xs px-2 py-1 rounded-full"
                >Postres</span
              >
            </div>
          </div>
        </a>

        <a href="/ajustes" class="group block">
          <div
            class="menu-card bg-white rounded-xl border border-[#e5e7eb] hover:border-[#dc2626] p-8"
          >
            <div class="flex items-start justify-between mb-6">
              <div class="icon-container bg-red-100 p-4 rounded-xl">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-[#dc2626]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div
                class="text-[#dc2626] opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
            <h3
              class="text-2xl font-bold text-[#1f2937] group-hover:text-[#dc2626] transition-colors mb-3"
            >
              Ajustes
            </h3>
            <p class="text-[#6b7280] text-lg mb-4">Configuración del sistema</p>
            <div class="flex items-center text-sm text-[#6b7280]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 mr-2 text-red-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
                ></path>
              </svg>
              Perfil, mesas y configuración
            </div>
            <div class="mt-6 flex flex-wrap gap-2">
              <span
                class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full"
                >Perfil</span
              >
              <span
                class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full"
                >Mesas</span
              >
              <span
                class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded-full"
                >Restaurante</span
              >
            </div>
          </div>
        </a>
      </div>

      <div class="bg-white rounded-xl border border-[#e5e7eb] p-8 mb-16">
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-2xl font-bold text-[#1f2937]">Actividad reciente</h3>
          <button
            class="text-[#4f46e5] hover:text-[#4338ca] font-medium flex items-center"
          >
            Ver todo
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 ml-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>

        <div class="space-y-6">
          <div class="flex items-start">
            <div class="bg-green-100 p-2 rounded-lg mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 text-green-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex justify-between">
                <p class="font-medium text-[#1f2937]">
                  Pedido #1234 completado
                </p>
                <span class="text-[#6b7280] text-sm">Hace 5 min</span>
              </div>
              <p class="text-[#6b7280]">Mesa 3 - Total: $78.50</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="bg-amber-100 p-2 rounded-lg mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 text-amber-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                ></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex justify-between">
                <p class="font-medium text-[#1f2937]">
                  Nuevo usuario registrado
                </p>
                <span class="text-[#6b7280] text-sm">Hace 20 min</span>
              </div>
              <p class="text-[#6b7280]">Carlos Mendez - Mozo</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="bg-indigo-100 p-2 rounded-lg mr-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 text-indigo-600"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                ></path>
              </svg>
            </div>
            <div class="flex-1">
              <div class="flex justify-between">
                <p class="font-medium text-[#1f2937]">Menú actualizado</p>
                <span class="text-[#6b7280] text-sm">Hace 1 hora</span>
              </div>
              <p class="text-[#6b7280]">Se agregaron 3 nuevos platillos</p>
            </div>
          </div>
        </div>
      </div>

      <div class="text-center pt-8 border-t border-[#e5e7eb]">
        <div class="flex justify-center space-x-6 mb-4">
