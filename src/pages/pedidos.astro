---
import OrderCreateModal from "@/components/OrderCreateModal"
import OrdersTable from "@/components/OrdersTable"
import LayoutDashboard from "@/layouts/LayoutDashboard.astro"
import ReportDownloadButton from "@/components/ReportDownloadButton"
---

<LayoutDashboard>
  <header class="flex justify-between mb-4">
    <div>
      <h1 class="text-2xl font-bold">Lista de pedidos</h1>
      <p class="text-gray-700 text-sm mt-1 mb-2">
        Gestiona los pedidos de los clientes y descarga informes
      </p>
    </div>
    <div class="flex items-center gap-2">
      <ReportDownloadButton client:load />
      <OrderCreateModal client:load />
    </div>
  </header>
  <OrdersTable client:load />
</LayoutDashboard>
